@model SistemaParqueaderoWEB.Models.ConfiguracionViewModel
@{
    ViewData["Title"] = "Editar Configuración";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-semibold mb-1">Editar Configuración</h4>
        <p class="text-muted mb-0">Modifique los valores de la configuración</p>
    </div>
    <a asp-action="Index" class="btn btn-light border">
        <iconify-icon icon="solar:arrow-left-line-duotone" class="me-1"></iconify-icon>
        Volver
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Clave" class="form-label fw-semibold">
                        Clave <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Clave" 
                           class="form-control" 
                           placeholder="Ej: Sistema.NombreParqueadero" />
                    <span asp-validation-for="Clave" class="text-danger small"></span>
                    <small class="text-muted">Use formato Categoria.Clave</small>
                </div>
                <div class="col-md-6">
                    <label asp-for="Tipo" class="form-label fw-semibold">
                        Tipo
                    </label>
                    <select asp-for="Tipo" class="form-select">
                        <option value="">Seleccione un tipo</option>
                        @foreach (var tipo in Model.TiposDisponibles)
                        {
                            <option value="@tipo" selected="@(tipo == Model.Tipo)">@tipo</option>
                        }
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Valor" class="form-label fw-semibold">
                    Valor <span class="text-danger">*</span>
                </label>
                <input asp-for="Valor" 
                       class="form-control" 
                       placeholder="Ingrese el valor de la configuración" />
                <span asp-validation-for="Valor" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Descripcion" class="form-label fw-semibold">
                    Descripción
                </label>
                <textarea asp-for="Descripcion" 
                          class="form-control" 
                          rows="3" 
                          placeholder="Descripción de la configuración..."></textarea>
                <span asp-validation-for="Descripcion" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-light border">
                    <iconify-icon icon="solar:arrow-left-line-duotone" class="me-1"></iconify-icon>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <iconify-icon icon="solar:check-circle-line-duotone" class="me-2"></iconify-icon>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>
