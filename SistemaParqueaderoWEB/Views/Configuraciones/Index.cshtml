@model IEnumerable<SistemaParqueaderoWEB.Models.Configuracion>
@{
    ViewData["Title"] = "Configuraciones";
    var categoria = ViewBag.Categoria as string;
    var categorias = ViewBag.Categorias as List<string> ?? new List<string>();
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-semibold mb-1">Configuraciones del Sistema</h4>
        <p class="text-muted mb-0">Gestione las configuraciones del sistema</p>
    </div>
    <div>
        <a asp-action="Tarifas" class="btn btn-primary me-2">
            <iconify-icon icon="solar:dollar-minimalistic-line-duotone" class="me-1"></iconify-icon>
            Tarifas
        </a>
        <a asp-action="Crear" class="btn btn-success">
            <iconify-icon icon="solar:add-circle-line-duotone" class="me-1"></iconify-icon>
            Nueva Configuración
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <iconify-icon icon="solar:check-circle-line-duotone" class="me-2"></iconify-icon>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <iconify-icon icon="solar:danger-triangle-line-duotone" class="me-2"></iconify-icon>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filtros por categoría -->
@if (categorias.Any())
{
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center flex-wrap gap-2">
                <span class="fw-semibold me-2">Filtrar por categoría:</span>
                <a asp-action="Index" 
                   class="btn btn-sm @(string.IsNullOrEmpty(categoria) ? "btn-primary" : "btn-outline-primary")">
                    Todas
                </a>
                @foreach (var cat in categorias)
                {
                    <a asp-action="Index" 
                       asp-route-categoria="@cat"
                       class="btn btn-sm @(categoria == cat ? "btn-primary" : "btn-outline-primary")">
                        @cat
                    </a>
                }
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <iconify-icon icon="solar:settings-line-duotone" style="font-size: 4rem; color: #ccc;"></iconify-icon>
            <h5 class="mb-2 mt-3">No hay configuraciones</h5>
            <p class="text-muted mb-4">
                @if (!string.IsNullOrEmpty(categoria))
                {
                    <span>No hay configuraciones en la categoría "@categoria".</span>
                }
                else
                {
                    <span>No hay configuraciones registradas en el sistema.</span>
                }
            </p>
            <a asp-action="Crear" class="btn btn-primary">
                <iconify-icon icon="solar:add-circle-line-duotone" class="me-1"></iconify-icon>
                Crear Primera Configuración
            </a>
        </div>
    </div>
}
else
{
    <!-- Tabla de configuraciones -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="card-title fw-semibold mb-0">
                    <iconify-icon icon="solar:settings-line-duotone" class="me-2"></iconify-icon>
                    Listado de configuraciones
                </h5>
                <span class="badge bg-primary rounded-pill">@Model.Count() configuración(es)</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-semibold">Clave</th>
                            <th class="fw-semibold">Valor</th>
                            <th class="fw-semibold">Tipo</th>
                            <th class="fw-semibold">Descripción</th>
                            <th class="fw-semibold">Última actualización</th>
                            <th class="fw-semibold text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var config in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@config.Clave</strong>
                                </td>
                                <td>
                                    <code class="small">@(config.Valor.Length > 50 ? config.Valor.Substring(0, 50) + "..." : config.Valor)</code>
                                </td>
                                <td>
                                    <span class="badge bg-info">@(config.Tipo ?? "String")</span>
                                </td>
                                <td>
                                    <small class="text-muted">@(config.Descripcion ?? "-")</small>
                                </td>
                                <td>
                                    @if (config.FechaActualizacion.HasValue)
                                    {
                                        <div class="small">@config.FechaActualizacion.Value.ToString("dd/MM/yyyy")</div>
                                        <div class="text-muted small">@(config.UsuarioActualizacion?.NombreCompleto ?? "-")</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Editar" asp-route-id="@config.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <iconify-icon icon="solar:pen-line-duotone"></iconify-icon>
                                    </a>
                                    <a asp-action="Eliminar" asp-route-id="@config.Id" class="btn btn-sm btn-outline-danger">
                                        <iconify-icon icon="solar:trash-bin-minimalistic-line-duotone"></iconify-icon>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
