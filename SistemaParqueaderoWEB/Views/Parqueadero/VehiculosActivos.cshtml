@model IEnumerable<SistemaParqueaderoWEB.Models.RegistroParqueo>
@{
    ViewData["Title"] = "Veh√≠culos Activos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>üöó Veh√≠culos Actualmente en el Parqueadero</h2>
        <a asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>No hay veh√≠culos actualmente en el parqueadero</h4>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Placa</th>
                                <th>Tipo</th>
                                <th>Hora de Entrada</th>
                                <th>Tiempo Parqueado</th>
                                <th>C√≥digo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var tiempoParqueado = DateTime.Now - item.FechaEntrada;
                                <tr>
                                    <td>@item.Id</td>
                                    <td><strong>@item.Placa</strong></td>
                                    <td>
                                        @if (item.TipoVehiculo == SistemaParqueaderoWEB.Models.TipoVehiculo.Carro)
                                        {
                                            <span class="badge bg-primary">üöó Carro</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">üèçÔ∏è Moto</span>
                                        }
                                    </td>
                                    <td>@item.FechaEntrada.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>
                                        <strong>@tiempoParqueado.Hours</strong>h <strong>@tiempoParqueado.Minutes</strong>m
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.CodigoBarras</small>
                                    </td>
                                    <td>
                                        <a asp-action="Salida" asp-route-placa="@item.Placa" 
                                           class="btn btn-sm btn-danger">
                                            Registrar Salida
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total de veh√≠culos:</strong> @Model.Count()
            </p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-refresh cada 30 segundos
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
