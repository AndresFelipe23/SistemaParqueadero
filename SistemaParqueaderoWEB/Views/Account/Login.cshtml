@model SistemaParqueaderoWEB.Models.LoginViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar sesi칩n - Sistema de Parqueadero</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/matdash/css/styles.min.css" />
</head>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden text-bg-light min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a asp-controller="Parqueadero" asp-action="Index"
                                   class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/matdash/images/logos/logo.svg" alt="Logo">
                                </a>
                                <p class="text-center">Inicia sesi칩n para gestionar el parqueadero</p>

                                <form asp-action="Login" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="ReturnUrl" />

                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                    <div class="mb-3">
                                        <label asp-for="UsuarioNombre" class="form-label"></label>
                                        <input asp-for="UsuarioNombre" class="form-control" autocomplete="username" />
                                        <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Contrasena" class="form-label"></label>
                                        <input asp-for="Contrasena" class="form-control" autocomplete="current-password" />
                                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <div class="form-check">
                                            <input asp-for="Recordarme" class="form-check-input primary" />
                                            <label asp-for="Recordarme" class="form-check-label text-dark"></label>
                                        </div>
                                        <!-- Futuro: enlace para recuperar contrase침a -->
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">
                                        Iniciar sesi칩n
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/matdash/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/matdash/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

