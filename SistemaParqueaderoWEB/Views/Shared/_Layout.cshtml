<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sistema de Parqueadero</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />

    <!-- Estilos MatDash (copiados a wwwroot/matdash) -->
    <link rel="stylesheet" href="~/matdash/css/styles.min.css" />
    <!-- Tus estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaParqueaderoWEB.styles.css" asp-append-version="true" />
</head>
<body>
    <!--  Contenedor principal MatDash -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
         data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">

        <!-- Sidebar -->
        <aside class="left-sidebar">
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a asp-area="" asp-controller="Parqueadero" asp-action="Index" class="text-nowrap logo-img">
                        <img src="~/matdash/images/logos/logo.svg" alt="Logo" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>

                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <span class="hide-menu">Navegaci√≥n</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Parqueadero" asp-action="Index">
                                <iconify-icon icon="solar:home-angle-line-duotone"></iconify-icon>
                                <span class="hide-menu">Inicio</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Parqueadero" asp-action="Entrada">
                                <iconify-icon icon="solar:login-2-line-duotone"></iconify-icon>
                                <span class="hide-menu">Entrada</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Parqueadero" asp-action="Salida">
                                <iconify-icon icon="solar:logout-2-line-duotone"></iconify-icon>
                                <span class="hide-menu">Salida</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Parqueadero" asp-action="VehiculosActivos">
                                <iconify-icon icon="solar:car-line-duotone"></iconify-icon>
                                <span class="hide-menu">Veh√≠culos Activos</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Parqueadero" asp-action="HistorialVehiculo">
                                <iconify-icon icon="solar:clipboard-list-line-duotone"></iconify-icon>
                                <span class="hide-menu">Historial Veh√≠culo</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Caja" asp-action="Index">
                                <iconify-icon icon="solar:wallet-money-line-duotone"></iconify-icon>
                                <span class="hide-menu">Caja</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false">
                                <iconify-icon icon="solar:card-receive-line-duotone"></iconify-icon>
                                <span class="hide-menu">Pagos</span>
                            </a>
                            <ul aria-expanded="false" class="collapse first-level">
                                <li class="sidebar-item">
                                    <a asp-area="" asp-controller="Pagos" asp-action="Historial" class="sidebar-link">
                                        <iconify-icon icon="solar:history-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Historial</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a asp-area="" asp-controller="Pagos" asp-action="PagosPendientes" class="sidebar-link">
                                        <iconify-icon icon="solar:clock-circle-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Pendientes</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Configuraciones" asp-action="Index">
                                <iconify-icon icon="solar:settings-line-duotone"></iconify-icon>
                                <span class="hide-menu">Configuraciones</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- Fin Sidebar -->

        <!-- Contenido principal -->
        <div class="body-wrapper">
            <!-- Header principal MatDash -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end gap-3">
                            <li class="nav-item d-none d-md-block">
                                <span class="fw-semibold">
                                    üöó Sistema de Parqueadero - Monter√≠a
                                </span>
                            </li>
                            <li class="nav-item d-none d-md-block">
                                <span class="text-muted small">
                                    @DateTime.Now.ToString("dd/MM/yyyy")
                                </span>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="javascript:void(0)" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/matdash/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="userMenu">
                                    <div class="message-body">
                                        <span class="dropdown-item-text fw-semibold">Administrador</span>
                                        <div class="dropdown-divider"></div>
                                        <a asp-controller="Parqueadero" asp-action="Index" class="dropdown-item">
                                            Inicio
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>

            <!-- Wrapper interior y contenido del dashboard -->
            <main class="body-wrapper-inner">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>

                <!-- Footer -->
                <footer class="py-6 px-6 text-center">
                    <p class="mb-0 fs-4">
                        &copy; 2026 - Sistema de Parqueadero - Monter√≠a
                    </p>
                </footer>
            </main>
        </div>
        <!-- Fin contenido principal -->
    </div>

    <!-- Scripts MatDash (desde wwwroot/matdash) -->
    <script src="~/matdash/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/matdash/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/matdash/js/sidebarmenu.js"></script>
    <script src="~/matdash/js/app.min.js"></script>
    <script src="~/matdash/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/matdash/libs/simplebar/dist/simplebar.js"></script>
    <!-- Iconos -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

    <!-- Scripts propios del proyecto -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>